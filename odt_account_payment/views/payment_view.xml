<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_account_payment_form_inherit" model="ir.ui.view">
            <field name="name">account.payment.form</field>
            <field name="model">account.payment</field>
            <field name="inherit_id" ref="account.view_account_payment_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='payment_type']" position="after">
                    <field name="collection_by" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                </xpath>
            </field>
        </record>

        <record id="view_account_payment_search_inherit" model="ir.ui.view">
            <field name="name">account.payment.search</field>
            <field name="model">account.payment</field>
            <field name="inherit_id" ref="account.view_account_payment_search"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='partner_id']" position="after">
                    <field name="collection_by"/>
                </xpath>
                <xpath expr="filter[@name='partner']" position="after">
                    <filter string="Collection by" name="collection" domain="[]" context="{'group_by': 'collection_by'}"/>
                </xpath>

            </field>
        </record>


        <template id="report_payment_receipt_document_inherit" inherit_id="account.report_payment_receipt_document">
            <xpath expr="//div[@class='page']//div[@class='row mb64']//div[@t-if='o.communication']" position="before">
                <div class="col-6" t-if="o.state">
                    <strong>Payment status: </strong>
                    <span t-field="o.state"/>
                </div>
                <div class="col-6" t-if="o.collection_by">
                    <strong>Collection by: </strong>
                    <span t-field="o.collection_by"/>
                </div>
            </xpath>

        </template>

    </data>
</odoo>