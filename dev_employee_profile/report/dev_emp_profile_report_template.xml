        <template id="dev_emp_profile_report_template">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="o">
                    <t t-call="dev_employee_profile.dev_emp_detail_report" t-lang="o.name"/>
                </t>
            </t>
        </template>
    </data>
</odoo>


