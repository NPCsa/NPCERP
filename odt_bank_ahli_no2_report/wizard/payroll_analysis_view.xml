<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Wizard view -->
        <record id="bank_ahli_n2_report_form" model="ir.ui.view">
            <field name="name">bank.ahli.n2.wiz.form</field>
            <field name="model">bank.ahli.n2.wiz</field>
            <field name="arch" type="xml">
                <form string="Model">
                    <group string="Payroll Analysis">
                        <field name="state"/>
                        <field name="batch_id"/>
                        <field name="payslip_id"/>
                    </group>
                    <footer>
                        <button name="print_report" string="Export PaySlip" type="object" default_focus="1"
                               class="oe_highlight" icon="fa-download"/>
                        or
                        <button string="Cancel" class="oe_link" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <!-- Wizard action -->
        <record id="action_bank_ahli_n2_report" model="ir.actions.act_window">
            <field name="name">Bank Report With Out WPS</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">bank.ahli.n2.wiz</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="bank_ahli_n2_report_form"/>
            <field name="target">new</field>
        </record>

        <!-- Action placement -->
        <menuitem action="action_bank_ahli_n2_report"
                  id="menu_bank_ahli_n2_report"
                  name = "Bank Report With Out WPS"
                  parent="odt_zawaj_hr.action_payroll_reports_menu"/>

    </data>
</odoo>
