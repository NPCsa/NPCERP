<?xml version="1.0" encoding="UTF-8"?>

<odoo>
    <data>
        <template id="hr_contract_employee_report">
            <t t-call="web.html_container">
                <t t-call="web.internal_layout">

                    <t t-foreach="docs" t-as="o">
                        <div class="page">
                            <div class="row">
                                <center>
                                    <t t-foreach="get_data" t-as="datar">
