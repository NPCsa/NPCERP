<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <template id="report_entry">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="o">

                    <t t-call="web.external_layout">
                        <div class="page" style="margin:10px; padding:22px; border:3px solid #ccc; border-radius:10px;">
                            <!--<link rel='stylesheet' href='/odootec_move_print/static/src/css/report.css'/>-->
                            <div class="row">

                                <center>
                                    <h1 class="p3 ft0">Entry Receipt:
                                        <span t-field="o.name"/>
                                    </h1>
                                    <br/>
                                    <br/>
                                    <table width="100%">
                                        <tbody>
                                            <tr>
                                                <td>
                                                    <p class="text-left">
                                                        <strong>Description:</strong>
                                                        <span t-field="o.ref"/>
                                                    </p>
                                                </td>

                                            </tr>
                                            <tr>
                                                <td>
                                                    <p class="text-left">
                                                        <strong>Date:</strong>
                                                        <span t-field="o.date"/>
                                                    </p>
                                                </td>
                                            </tr>

                                        </tbody>
                                    </table>
                                    <table style="border: 1px solid black;table-layout:fixed">
                                        <thead>
                                            <tr>
                                                <th style="word-wrap:break-word;border:1px solid black" width="10%" class="text-center td5">code</th>
                                                <th style="word-wrap:break-word;border:1px solid black" width="10%" class="text-center td5">Account</th>
                                                <th style="word-wrap:break-word;border:1px solid black" width="10%" class="text-center td5">Partner</th>
                                                <th style="word-wrap:break-word;border:1px solid black" width="10%" class="text-center td5">Analytic Account</th>
                                                <th style="word-wrap:break-word;border:1px solid black" width="10%" class="text-center td5">Analytic tag</th>
                                                <th style="word-wrap:break-word;border:1px solid black" width="10%" class="text-center td5">Credit</th>
                                                <th style="word-wrap:break-word;border:1px solid black" width="10%" class="text-center td5">Debit</th>
                                                <th style="word-wrap:break-word;border:1px solid black" width="15%" class="text-center td5">Label</th>
                                            </tr>
                                        </thead>
                                        <tbody class="voucher_tbody">
                                            <t t-set="debit" t-value="0"/>
                                            <t t-set="credit" t-value="0"/>
                                            <tr t-foreach="o.line_ids" t-as="l">
                                                <t t-set="debit" t-value="debit+l.debit"/>
                                                <t t-set="credit" t-value="credit+l.credit"/>
                                                <td style="word-wrap:break-word;border:1px solid black"
                                                    class="text-center td1">
                                                    <span t-field="l.account_id.code"  style="font-size: x-small;"/>
                                                </td>
                                                <td style="word-wrap:break-word;border:1px solid black"
                                                    class="text-center td1">
                                                    <span t-field="l.account_id.name"  style="font-size: x-small;"/>
                                                </td>
                                                <td style="word-wrap:break-word;border:1px solid black"
                                                    class="text-center td1">
                                                    <span t-field="l.partner_id"  style="font-size: x-small;"/>
                                                </td>
                                                <td style="word-wrap:break-word;border:1px solid black"
                                                    class="text-center td1">
                                                    <span t-field="l.analytic_account_id.name"  style="font-size: xx-small;"/>
                                                </td>
                                                <td style="word-wrap:break-word;border:1px solid black"
                                                    class="text-center td1">
                                                    <t t-foreach="l.analytic_tag_ids" t-as="tag">
                                                        <span t-field="tag.name"  style="font-size: x-small;"/>
                                                    </t>

                                                </td>

                                                <td style="border:1px solid black; word-wrap:break-word"
                                                    class="text-center td1">
                                                    <span t-field="l.credit"  style="font-size: x-small;"/>
                                                </td>
                                                <td style="border:1px solid black; word-wrap:break-word"
                                                    class="text-center td1">
                                                    <span t-field="l.debit"  style="font-size: x-small;"/>

                                                </td>
                                                <!--<td style="border:1px solid black; word-wrap:break-word"-->
                                                    <!--class="text-center td2">-->
                                                    <!--<span t-field="l.analytic_account_id"/>-->
                                                <!--</td>-->
                                                <td style="border:1px solid black; word-wrap:break-word"
                                                    class="text-center td3">
                                                    <span t-field="l.name"  style="font-size: x-small;"/>
                                                </td>
                                            </tr>
                                            <tr>
                                                <td style="border:1px solid black; word-wrap:break-word"
                                                    class="text-center td2"></td>
                                                <td style="border:1px solid black; word-wrap:break-word"
                                                    class="text-center td2"></td>
                                                <td style="border:1px solid black; word-wrap:break-word"
                                                    class="text-center td2"></td>
                                                <td style="border:1px solid black; word-wrap:break-word"
                                                    class="text-center td2"></td>
                                                <td style="border:1px solid black; word-wrap:break-word"
                                                    class="text-center td2"></td>
                                                <td style="border:1px solid black; word-wrap:break-word"
                                                    class="text-center td2">
                                                    <span t-esc="credit"  style="font-size: x-small;"/>
                                                </td>
                                                <td style="border:1px solid black; word-wrap:break-word"
                                                    class="text-center td2">
                                                    <span t-esc="debit"  style="font-size: x-small;"/>
                                                </td>

                                                <td style="border:1px solid black; word-wrap:break-word"
                                                    class="text-center td2"></td>
                                            </tr>
                                        </tbody>
                                    </table>
                                    <!--<div class="row mt32 mb32" id="edit2">-->
                                        <!--<div class="col-xs-4">-->
                                            <!--<strong>Prepared By:</strong>-->
                                        <!--</div>-->
                                        <!--<div class="col-xs-4">-->
                                            <!--<strong>Reviewed By:</strong>-->
                                        <!--</div>-->
                                        <!--<div class="col-xs-4">-->
                                            <!--<strong>Approved By:</strong>-->
                                        <!--</div>-->
                                    <!--</div>-->
                                </center>
                            </div>
                        </div>
                    </t>
                </t>
            </t>

        </template>


    </data>
</odoo>
